root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML-Files
[*.html]
indent_style = space
indent_size = 4

# CSS-Files
[*.css]
indent_style = space
indent_size = 2

# SCSS-Files
[*.scss]
indent_style = space
indent_size = 2

# TypoScript-Files
[*.typoscript]
indent_style = space
indent_size = 4

# TMPL-Files
[*.tmpl]
indent_style = space
indent_size = 4

# XLF-Files
[*.xlf]
indent_style = tab
indent_size = 4

# JS-Files
[*.js]
indent_style = space
indent_size = 2

# PHP-Files
[*.php]
indent_style = space
indent_size = 4

# MD-Files
[*.md]
indent_style = space
indent_size = 4

# YML-Files
[*.yml]
indent_style = space
indent_size = 4

# package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
